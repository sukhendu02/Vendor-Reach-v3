  <style>
    * {
      font-family: "Inter";
    }

    #sidebar ul li.reg-approval a {
            color: #5e63ff;

            svg {
                fill: #5e63ff;
            }
    
    
        }

    .container-flex {
      display: flex;
      gap: 20px;
      height: 102vh;

    }

    .left-pane {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 16px;
      overflow: scroll;

    }

    .right-pane {
      flex: 2;
      background: #fff;
      padding: 24px;
      border-radius: 8px;
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
      width: 500px;
      /* Set a fixed width */
      flex-shrink: 0;
      position: sticky;
      padding: 24px;
      border-left: 1px solid #e5e7eb;
      box-shadow: -2px 0 5px rgba(0, 0, 0, 0.03);

    }

    .nav-link {
      background: #fff;
      width: 95%;
      padding: 16px;
      border-radius: 8px;
      position: relative;
      box-shadow: 0 0 6px rgba(0, 0, 0, 0.05);
      cursor: pointer;
    }

    .nav-link.active {
      color: #374151 !important;
      border: 2px solid #6366f1;
      background-color: #f0f4ff !important;

    }

    .nav-link.selected {
      border: 2px solid #6366f1;
      background-color: #f0f4ff;
    }

    h3 {
      margin-bottom: 8px;
    }

    .author {
      font-size: 0.9rem;
      color: #666;
      margin-bottom: 8px;
    }

    .tags {
      margin-top: 8px;
    }

    .tags span {
      display: inline-block;
      background: #e5e7eb;
      color: #374151;
      padding: 4px 8px;
      border-radius: 6px;
      font-size: 0.8rem;
      margin: 2px;
    }

    .status {
      position: absolute;
      top: 12px;
      right: 16px;
      padding: 4px 10px;
      border-radius: 16px;
      font-size: 0.75rem;
      font-weight: bold;
    }

    .status.published {
      background-color: #d1fae5;
      color: #065f46;
    }

    .status.in-review {
      background-color: #e0e7ff;
      color: #3730a3;
    }

    .status.needs-improvement {
      background-color: #fef3c7;
      color: #92400e;
    }

    .preview-image {
      max-width: 150px;
      margin-bottom: 16px;
    }

    textarea {
      width: 100%;
      height: 80px;
      padding: 10px;
      margin-top: 8px;
      border-radius: 6px;
      border: 1px solid #d1d5db;
      resize: vertical;
    }

    .actions {
      margin-top: 16px;
      display: flex;
      gap: 10px;
    }

    button {
      padding: 10px 16px;
      border: none;
      border-radius: 6px;
      font-size: 1rem;
      cursor: pointer;
      transition: 0.3s ease;
    }

    button.approve {
      background-color: #10b981;
      color: white;
    }

    button.reject {
      background-color: #ef4444;
      color: white;
    }

    .info {
