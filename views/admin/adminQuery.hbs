          display: block;
          /* Hide table headers (but not display: none;, for accessibility) */
        }
        
        thead tr,
        tfoot tr {
          position: absolute;
          top: -9999px;
          left: -9999px;
        }
        td {
          /* Behave  like a "row" */
          border: none;
          border-bottom: 1px solid #eee;
          position: relative;
          padding-left: 50% !important;
        }
        td:before {
          /* Now like a table header */
          position: absolute;
          /* Top/left values mimic padding */
          top: 6px;
          left: 6px;
          width: 45%;
          padding-right: 10px;
          white-space: nowrap;
        }
        .table td:nth-child(1) {
          background: #ccc;
          height: 100%;
          top: 0;
          left: 0;
          font-weight: bold;
          /*
     Label the data
     */
        }
        td:nth-of-type(1):before {
          content: "#";
